<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<template id="assets_frontend" inherit_id="website.assets_frontend" name="website_sticky_header">
            <xpath expr="." position="inside">
                <link href="/website_sticky_header/static/src/css/sticky_header.css" rel="stylesheet"/>
                <script type="text/javascript" src="/website_sticky_header/static/src/js/sticky_header.js"></script>
            </xpath>
        </template>

		<template id="sticky_header" inherit_id="website.layout">
            <xpath expr="//header/div" position="attributes">
                <attribute name="class">navbar navbar-default navbar-fixed-top</attribute>
                <attribute name="id">custom-nav</attribute>
            </xpath>
		</template>
		
        <template id="show_sign_in" customize_show="True" inherit_id="website_sticky_header.sticky_header" name="Show Sign In" groups="base.group_public">
            <xpath expr="//ul[@id='top_menu']" position="inside">
                <li class="divider"/>
                <li>
                    <a t-attf-href="/web/login">
                        <b>Sign in</b>
                    </a>
                </li>
            </xpath>
        </template>		

	</data>
</openerp>